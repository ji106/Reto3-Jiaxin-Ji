<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Películas</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <h1>Listado de películas</h1>
    <p>Usuario: <%= usuarioActual.username %> </p>
    <a href="/logout" class="logout">Cerrar Sesión</a>

    <% peliculas.forEach(p => { %>
        <div class="pelicula">
            <h2><a href="/peliculas/<%= p.id %>"></a></h2>
            <p>Género: <%= p.genre %></p>
            <p>Director: <%= p.director %></p>
            <p>Descripción: <%= p.description %></p>

            <h3>Copias disponibles:</h3>
            <ul>
                <% p.copies.forEach(c => { %>
                    <li>
                        ID copia: <%= c.copyId %> |
                        Formato: <%= c.format %> |
                        Estado: <%= c.status %>
                    </li>
                <% }) %>
            </ul>
        </div>
    <% }) %>
    
</body>
</html>